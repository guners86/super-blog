<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <% @articles.each do |article| %>
                <div class="article">
                    <div class="article-title">
                        <span class="title"><%= link_to article.title, article %></span>
                        <span class="description">Publicado por <%= article.user.email %> el <%= article.created_at.to_s(:db) %></span>
                    </div>
                    <div class="article-body">
                        <% if article.body.length > 250 %>
                            <%= article.body[0..250] + "..." %>
                        <% else %>
                            <%= article.body %>
                        <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>