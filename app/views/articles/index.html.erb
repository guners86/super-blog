<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <% @articles.each do |article| %>
                <div class="article">
                    <div class="article-title">
                        <span class="title"><%= link_to article.title, article %></span>
                        <span class="description">Publicado por <%= article.user.email %> <%= time_ago_in_words article.created_at %></span>
                    </div>
                    <div class="article-body">
                        <% if article.body.length > 250 %>
                            <%= markdown(article.body[0..250] + "...") %>
                        <% else %>
                            <%= markdown(article.body) %>
                        <% end %>
                    </div>
                    <% if signed_in? %>
                        <% if current_user.id == article.user.id %>
                            <div class="article-tools">
                                <%= link_to "<span class='glyphicon glyphicon-pencil'>Editar</span>".html_safe, edit_article_path(article) %>
                                <%= link_to "<span class='glyphicon glyphicon-trash'>Eliminar</span>".html_safe, article, method: :delete, data: { confirm: "¿Estás seguro de eliminar este post?" } %>
                            </div>
                        <% end %>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>