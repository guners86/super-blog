          <ul class="nav navbar-nav">

          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if signed_in? %>
              
            <% else %>
              <li><%= link_to "RegÃ­strate", new_user_path %></li>
            <% end %>
